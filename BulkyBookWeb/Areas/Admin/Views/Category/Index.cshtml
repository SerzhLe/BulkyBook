@{
    ViewData["Title"] = "Category";
}

@model IEnumerable<Category>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <!-- We do not need to specify asp-area here because if no area specified - it takes current area -->
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> &nbsp;
            Create New Category
            </a>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <h3>No Categories yet</h3>
}

else
{
    <table class="table">
        <thead>
            <tr class="table-primary">
                <td width="25%">Category Name</td>
                <td width="25%">Display Order</td>
                <td width="25%">Created at</td>
                <td width="25%">Action</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.DisplayOrder</td>
                    <td>@category.Created</td>
                    <td>
                        <div class="btn-group" role="group">
                            <button class="btn btn-primary">
                                <a class="button-link" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id">
                                    <i class="bi bi-pencil-square"></i>
                                    Edit
                                </a>
                            </button>
                            <form method="post" class="ms-2">
                                <button class="btn btn-danger" asp-action="Delete" asp-controller="Category" asp-route-id="@category.Id">Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}